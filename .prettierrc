{
	"trailingComma": "none",
	"tabWidth": 2,
	"useTabs": true,
	"semi": false,
	"singleQuote": true,
	"jsxSingleQuote": true,
	"arrowParens": "avoid",
	"bracketSpacing": true,
	"printWidth": 80,
	"proseWrap": "always",
	"importOrder": [
		"^react$",
		"^react-dom$",
		"<THIRD_PARTY_MODULES>",
		"^@/components/(.*)$",
		"^@/hooks/(.*)$",
		"^@/lib/(.*)$",
		"^@/pages/(.*)$",
		"^@/providers/(.*)$",
		"^@/types/(.*)$",
		"^@/(.*)$",
		"^[./]",
		"^(?!.*\\.css$)(../.*)$",
		"^(?!.*\\.css$)(./.*)$",
		".*\\.css$"
	],
	"importOrderSeparation": true,
	"importOrderSortSpecifiers": true,
	"importOrderCaseInsensitive": true,
	"plugins": [
		"@trivago/prettier-plugin-sort-imports",
		"prettier-plugin-tailwindcss"
	]
}
